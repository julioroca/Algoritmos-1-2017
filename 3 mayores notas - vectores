#include "stdafx.h"
#include <iostream>
#include <string>
#include <conio.h>
using namespace std;

void cargarvec(int notas[],int n,string alumnos[]);
void mostrarvec(int notas[],int n,string alumnos[]);
void ordenarnotas(int notas[],int n,string alumnos[]);
void main()
{int notas[100],n;
 string alumnos[100];

	do{
		cout<<"Ingrese el tamaÃ±o del vector  ";
		cin>>n;

	 }while(n<=0 || n>100);
 
	cargarvec(notas,n,alumnos);
	ordenarnotas(notas,n,alumnos);
	mostrarvec(notas,n,alumnos);
	getch();


}

void cargarvec(int notas[],int n,string alumnos[])
{	
	for(int i=0;i<n;i++)
	{	cin.ignore();
		cout<<"#"<<i+1<<"  Nombre:  ";
		getline(cin,alumnos[i]);
		cout<<"  Nota:  ";
		cin>>notas[i];
	}
}

void mostrarvec(int notas[],int n,string alumnos[])
{int s=3;
			cout<<"Alumno \t nota"<<endl;	
		for(int i=0;i<s;i++)
		{
			cout<<alumnos[i]<<"\t"<<notas[i]<<endl;
			if(notas[i]==notas[i+1])
				{
					s++;

				}
		}
}

void ordenarnotas(int notas[],int n,string alumnos[])
{string aux;
 int naux;
	for(int i=0;i<n-1;i++)
	{	
		for(int k=i+1;k<n;k++)
		{
			if(notas[i]<notas[k])
				{	
					naux=notas[k];
					notas[k]=notas[i];
					notas[i]=naux;
					aux=alumnos[k];
					alumnos[k]=alumnos[i];
					alumnos[i]=aux;
				}
			
		}
	}
}

